obj_seduce_spouse = {
	type = spouse
	
	allow = {
		is_adult = yes
		is_married = yes
		prisoner = yes
		NOT = {
			trait = incapable
		}
		OR = {
			has_lover = no
			NOT = {
				any_lover = {
					is_married = yes
					any_spouse = {
						character = ROOT
					}
				}
			}
		}
	}
	success = {
		any_lover = {
			any_spouse = {
				character = ROOT
			}
		}
	}